extends:
   - eslint:recommended
plugins:
  - jest
env:
  es6: true
  jest: true
  node: true
rules:
  semi: 2
  strict: 2
  indent:
    - error
    - 2
  quotes:
    - 1
    - single
    - avoid-escape
  space-before-function-paren:
    - 2
    - always
  keyword-spacing:
    - 2
    - before: true
      after: true
  space-infix-ops: 2
  spaced-comment:
    - 2
    - always
  arrow-spacing: 2
  no-console: 2
  no-empty: 2
  eqeqeq:
    - 2
    - always
  no-unused-vars: 2
  no-unsafe-negation: 2
  prefer-const: 2
  no-var: 2

  # Jest
  jest/no-disabled-tests: 1
  jest/no-focused-tests: 1
  jest/no-identical-title: 2
