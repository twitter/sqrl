    "wikipedia-diff-stream": "file:packages/wikipedia-diff-stream"
  },
  "scripts": {
    "clean": "lerna run clean",
    "deploy-website": "lerna run docs; rm -rf website/.deploy_git && git clone --branch gh-pages git@github.com:twitter/sqrl website/.deploy_git; lerna run deploy-website",
    "serve-website": "lerna run docs; (cd website && npm run serve-website)",
    "test": "jest",
    "test:integration": "jest --config=jest.integration.config.js",
    "coverage": "jest --coverage",
    "build": "lerna run build",
    "generate-parser": "lerna run --parallel generate-parser",
    "watch": "lerna run --parallel watch -- -- --preserveWatchOutput",
    "watch:test": "npm run test -- --watch",
    "watch:test:integration": "npm run test:integration -- --watch"
  }
