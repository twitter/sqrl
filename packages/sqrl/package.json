{
  "name": "sqrl",
  "version": "0.5.0",
  "description": "sqrl",
  "repository": "",
  "author": {
    "name": "Josh Yudaken",
    "email": "josh@smyte.com"
  },
  "keywords": [
    "sqrl"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "docs": "typedoc --out ../../website/public/reference --ignoreCompilerErrors --stripInternal --excludeExternals src/api/",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\"",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "tsc --pretty",
    "test": "jest",
    "test:integration": "jest --config=jest.integration.config.js",
    "coverage": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "watch:test:integration": "npm run test:integration -- --watch",
    "codegen": "./scripts/generateParser"
  },
  "dependencies": {
    "bignum": "^0.13.0",
    "bluebird": "^3.5.1",
    "debug": "^3.1.0",
    "double-ended-queue": "^2.1.0-0",
    "eventemitter3": "^3.1.0",
    "fast-stable-stringify": "^1.0.0",
    "ioredis": "^3.2.2",
    "js-yaml": "^3.12.0",
    "jsonpath": "^1.0.0",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.21",
    "murmurhash-native": "^3.3.0",
    "node-nice": "^0.0.1",
    "prettier": "^1.13.7",
    "sqrl-common": "file:../sqrl-common"
  },
  "devDependencies": {
    "@types/bignum": "^0.0.29",
    "@types/ioredis": "^3.2.10",
    "@types/jest": "^22.0.1",
    "@types/jest-diff": "^20.0.0",
    "@types/jsonpath": "^0.2.0",
    "@types/node": "^8.10.38",
    "@types/pegjs": "^0.10.1",
    "@types/prettier": "^1.13.1",
    "coveralls": "^2.0.0",
    "jest": "^22.4.4",
    "jest-environment-node-debug": "^2.0.0",
    "jest-extended": "^0.7.2",
    "pegjs": "^0.10.0",
    "rimraf": "^2.0.0",
    "sqrl-test-utils": "0.0.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^5.0.1",
    "ts-pegjs": "^0.2.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typedoc": "git+https://github.com/TypeStrong/typedoc.git#7424d9705dae528e4ec111a176e3c3d91364f8e5",
    "typescript": "^3.1.6"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
