  "homepage": "",
  "bin": {
    "sqrl": "lib/cli.js"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "author": {
    "name": "Josh Yudaken",
